# Customer Resources Portal Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Finite State API Credentials
# =============================================================================
# Your API authentication token from Finite State
FINITE_STATE_AUTH_TOKEN=your-api-token-here

# Your Finite State domain (e.g., acme.finitestate.io)
FINITE_STATE_DOMAIN=your-domain.finitestate.io

# =============================================================================
# OPTIONAL: AI Assistant Configuration
# =============================================================================
# Set ONE of these to enable the AI assistant feature
# If both are set, Anthropic (Claude) will be used

# OpenAI API key (for GPT-4o)
# OPENAI_API_KEY=sk-...

# Anthropic API key (for Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# OPTIONAL: Application Settings
# =============================================================================
# Enable debug mode (default: false)
# DEBUG=false

# Server port (default: 8080)
# PORT=8080
